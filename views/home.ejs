<!-- FILTROS -->
<div class="container-filtros">
  <h3>Refiná tu busqueda</h3>
  <div class="filtro">
    <label for="talle">Talle:</label>
    <select id="talle" name="talle">
      <option value="ALL">Todos</option>
      <option value=1>32</option>
      <option value=2>33</option>
      <option value=3>34</option>
      <option value=4>35</option>
      <option value=5>36</option>
      <option value=6>37</option>
      <option value=7>38</option>
      <option value=8>39</option>
      <option value=9>40</option>
      <option value=10>41</option>
      <option value=11>42</option>
      <option value=12>43</option>
      <option value=13>44</option>
      <option value=14>45</option>
      <option value=15>46</option>
    </select>
  </div>

  <div class="filtro">
    <label for="marca">Marca:</label>
    <select id="marca" name="marca">
      <option value="ALL">Todas</option>
      <option value=1>Adidas</option>
      <option value=2>Nike</option>
      <option value=3>Lacoste</option>
      <option value=4>Puma</option>
      <option value=5>Fila</option>
      <option value=6>New Balance</option>
      <option value=7>Converse</option>
      <option value=8>Crocs</option>
      <option value=9>Vans</option>
    </select>
  </div>

  <div class="filtro">
    <label for="pais">Origen:</label>
    <select id="pais" name="pais">
      <option value="ALL">Todos</option>
      <option value=1>Vietnam</option>
      <option value=2>China</option>
      <option value=3>Indonesia</option>
      <option value=4>Brasil</option>
      <option value=5>India</option>
      <option value=6>México</option>
      <option value=7>Estados Unidos</option>
      <option value=8>Italia</option>
      <option value=9>España</option>
    </select>
  </div>

  <div class="filtro">
    <label for="genero">Género:</label>
    <select id="genero" name="genero">
      <option value="ALL">Todos</option>
      <option value=1>Hombre</option>
      <option value=2>Mujer</option>
    </select>
  </div>

  <div class="filtro">
    <label for="pie">Pie:</label>
    <select id="pie" name="pie">
      <option value="ALL">Ambos</option>
      <option value=1>Izquierdo</option>
      <option value=2>Derecho</option>
    </select>
    
  </div>

  <div class="filtro">
    <label for="precio">Precio:</label>
    <input type="number" id="precio-min" name="precio-min" placeholder="Min" min="0">
    <span>-</span>
    <input type="number" id="precio-max" name="precio-max" placeholder="Max" min="0">
  </div>

</div>


  <!-- PUBLICACIONES -->
  <div class="container-posts" id="container-posts">
    <% if (publicaciones.length > 0) { %>
      <% publicaciones.forEach((publicacion) => { %>
        <div class="tarjeta">
          <img src="<%= publicacion.imagen_principal %>" alt="<%= publicacion.name %>">
          <h2><%= publicacion.name %></h2>
          <p>Precio: $<%= publicacion.precio %></p>
          <a href="/publicacion/<%= publicacion.idpost %>">Ver</a>
        </div>
      <% }); %>
    <% } else { %>
      <p>No hay publicaciones disponibles.</p>
    <% } %>
  </div>
  

